<div class="flex min-h-[900px] flex-col bg-gray-50">
  <div class="flex min-h-full flex-1 flex-col justify-center pb-6 sm:px-6 lg:px-8">
    <div class="mx-auto md:w-full md:max-w-md">
      <img class="mx-auto h-10 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
      <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-blu9-900!">Créer un compte</h2>
    </div>
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
      <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults:{ input_html: {class:"" }}) do |f| %>
          <div class="form-inputs space-y-6">
            <div class="sm:flex sm:flex-wrap string optional block text-sm/6 font-medium text-gray-900">
              <div class="sm:w-1/2 sm:pr-2">
                <%= f.label "Prénom"%> <abbr title="required">*</abbr>
                <div class="mt-2">
                  <%= f.input :firstname,
                              label: false,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete:"given-name",
                                            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-900 sm:text-sm/6"}%>
                </div>
              </div>
              <div class="sm:w-1/2 sm:pl-2 max-sm:pt-6">
                <%= f.label "Nom" %> <abbr title="required">*</abbr>
                <div class="mt-2">
                  <%= f.input :lastname,
                              label: false,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete:"family-name",
                                            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-900 sm:text-sm/6"}%>
                </div>
              </div>
            </div>
            <div></div>
            <div>
              <%= f.label "Adresse mail",
                          class:"block text-sm/6 font-medium text-gray-900" %>
              <div class="mt-2">
                <%= f.input :email,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email",
                                          class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-900 sm:text-sm/6"} %>
              </div>
            </div>
            <div>
              <%= f.label "Téléphone Portabe",
                          class:"block text-sm/6 font-medium text-gray-900" %>
              <div class="mt-2">
                <%= f.input :phone_number,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "tel-national",
                                          class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-900 sm:text-sm/6"} %>
              </div>
            </div>
            <div>
              <%= f.label "Mot de passe",
                          class:"block text-sm/6 font-medium text-gray-900"%>
              <div class=mt-2>
                <%= f.input :password,
                            label:false,
                            required: false,
                            hint: ("#{@minimum_password_length} caractères au minimum" if @minimum_password_length),
                            input_html: { autocomplete: "current-password",
                                          class:"block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-900 sm:text-sm/6" } %>
              </div>
            </div>
            <div class=mb-3>
              <%= f.label "Confirmation du mot de passe",
                          class:"block text-sm/6 font-medium text-gray-900"%>
              <div class=mt-2>
                <%= f.input :password_confirmation,
                            label: false,
                            required: true,
                            input_html: { autocomplete: "new-password",
                                          class:"block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-900 sm:text-sm/6" } %>
              </div>
            </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class:"flex w-full bg-blue-900! justify-center px-3 py-1.5 font-semibold text-white shadow-xs hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-900" %>
          </div>

        <% end %>
      </div>
      <p class="mt-10! text-center! text-sm/6 text-gray-500">
        <%= link_to "Vous avez déjà un compte?", new_user_session_path, class:"font-semibold text-blue-900! hover:text-blue-700! no-underline!" %>
      </p>
    </div>
  </div>
</div>
